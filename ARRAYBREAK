#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;  cin>>t;
    while(t--){
        vector<int> even;
        vector<int> odd;
        int n,x;    cin>>n;
        for(int i=0;i<n;i++){
            cin>>x;
            if(x%2==0)  even.push_back(x);
            else odd.push_back(x);
        }
        if(even.size()==0 || odd.size()==0) cout<<"0"<<endl;
        else cout<<even.size()<<endl;
    }
    return 0;
}
