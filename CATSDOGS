#include <iostream>
using namespace std;

int main() {
	// your code goes here
	long long int t;
	cin>>t;
	while(t--){
	    long long int c,d,l,tmp=0;
	    cin>>c>>d>>l;
	    tmp = d*4;
	    if(l%4!=0 || l < tmp || (tmp+(c*4) < l) ) cout<<"no"<<endl;
	    else{
	        
	       if(d<((c+1)/2) && l<(tmp+((c-(2*d)))*4)) cout<<"no"<<endl;
	       else cout<<"yes"<<endl;
	        
	    }
	}
	return 0;
}
