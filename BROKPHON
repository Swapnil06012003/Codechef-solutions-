#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;cin>>t;
    while(t--){
        int n;  cin>>n;
        int arr[n];
        for(int i =0;i<n;i++)   cin>>arr[i];
        set<int, greater<int> > s1;
        for(int i=0;i<n-1;i++){
            if(arr[i]!=arr[i+1]){
                s1.insert(i);
                s1.insert(i+1);
            }
        }
        cout<<s1.size()<<endl;
    }

    return 0;
}
