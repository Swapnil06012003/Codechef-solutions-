#include <bits/stdc++.h>
using namespace std;
int main(){
    int t;  cin>>t;
    while(t--){
        int n;  cin>>n;
        long long int arr[n],sum=0;
        
        for(long long int i=0;i<n;i++){    cin>>arr[i];   sum+=arr[i];    }
        sum/=(n-1);
        for(long long int i=0;i<n;i++)    cout<<sum-arr[i]<<" ";
        
        cout<<endl;
    }

    return 0;
}
